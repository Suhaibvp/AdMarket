<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/developerDashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <DatePicker
        android:id="@+id/datePickerStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="true" />

    <Button
        android:id="@+id/btnScheduleCleanup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Cleanup" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSelectedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Time: Not set" />

        <Button
            android:id="@+id/btnPickTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Cleanup Time" />

        <Button
            android:id="@+id/btnScheduleAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Cleanup Alarm" />

    </LinearLayout>


</LinearLayout>
